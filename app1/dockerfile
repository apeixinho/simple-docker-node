FROM node:8-alpine

RUN addgroup -S app && adduser -S -g app app && \
    apk update && apk upgrade && \
    apk add --no-cache build-base && \
    npm i pm2 express && \
    rm -f /var/cache/apk/*

WORKDIR /home/app

COPY processes.json app1.js /home/app/

RUN chown -R app:app /home/app

USER app

EXPOSE 10001

CMD ["pm2-docker", "start","processes.json"]
